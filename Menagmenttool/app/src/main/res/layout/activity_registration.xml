<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.menagmenttool.registration"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/RegPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#11000000"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="10"
        android:drawablePadding="14dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/hints"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/RegEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/RegPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="#11000000"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:ems="10"
        android:drawablePadding="14dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/hints"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/RegRegion"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/RegEmail"
        android:layout_alignBottom="@+id/RegPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="#11000000"
        android:drawableLeft="@android:drawable/ic_menu_mapmode"
        android:ems="10"
        android:drawablePadding="14dp"
        android:hint="Region"
        android:inputType="textPersonName"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/hints"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/RegPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignLeft="@+id/RegEmail"
        android:layout_alignStart="@+id/RegEmail"
        android:layout_marginBottom="130dp"
        android:background="#11000000"

        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:drawablePadding="14dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/hints" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/welcome"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/colorAccent"
                android:text="Create Account"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

</RelativeLayout>
